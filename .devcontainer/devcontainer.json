// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": ".NET Aspire",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/dotnet:9.0-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/powershell:1": {},
	},

	"hostRequirements": {
		"cpus": 4,
		"memory": "32gb",
		"storage": "64gb"
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [5000, 5001],
	// "portsAttributes": {
	//		"5001": {
	//			"protocol": "https"
	//		}
	// }

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "dotnet restore",
	"onCreateCommand": [
		"dotnet new install Aspire.ProjectTemplates::9.1.0 --force"
	],
	"postStartCommand": [
		"dotnet dev-certs https --trust",
		"mkdir $CODESPACE_VSCODE_FOLDER/Data",
		"curl -o $CODESPACE_VSCODE_FOLDER/Data/nl_postcodes.zip https://data.openaddresses.io/cache/uploads/jeffdefacto/2025-02-25-thhqk/nl-countrywide.addresses.geojson.zip",
		"echo 'Data/**' >>  $CODESPACE_VSCODE_FOLDER/.gitignore",
		"unzip $CODESPACE_VSCODE_FOLDER/Data/nl_postcodes.zip -d $CODESPACE_VSCODE_FOLDER/Data",
		"mv $CODESPACE_VSCODE_FOLDER/Data/Users/jeffunderwood/Downloads/netherlands_addresses.geojson $CODESPACE_VSCODE_FOLDER/Data/nl_postcodes.geojson",
		"rm $CODESPACE_VSCODE_FOLDER/Data/Users -r",
		"rm $CODESPACE_VSCODE_FOLDER/Data/nl_postcodes.zip"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csdevkit",
				"GitHub.copilot-chat",
				"GitHub.copilot"
			]
		}
	}
	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
